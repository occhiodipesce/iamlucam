---
import MainTitle from '../components/MainTitle.astro'
---
        <!-- header/navigation -->
      <nav>
        <div x-data="{ isOpen: false }" class="flex justify-between p-4 lg:p-8">
            <div class="flex items-center">
                <MainTitle href="/" title="IamLucaM."/>
            </div>

            <!-- left header section -->
            <div class="flex items-center justify-between">
                <button @click="isOpen = !isOpen" type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white lg:hidden" fill="none"
                        viewBox="0 0 24 24" stroke="black">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
                <div class="hidden space-x-6 lg:inline-block">
                    <a href="/progetti/" class="object-title">Progetti</a>
                    <a href="/post/" class="object-title">Post</a>
                    <!--<a href="#" class="object-title">Curriculum</a>-->
                </div>

                <!-- mobile navbar -->
                <div class="mobile-navbar">
                    <!-- navbar wrapper -->
                    <div class="fixed left-0 w-full h-48 p-5 bg-white rounded-lg shadow-xl top-16" x-show="isOpen"
                        @click.away=" isOpen = false">
                        <div class="flex flex-col space-y-6">
                            <a href="/progetti/" class="object-title">Progetti</a>
                            <a href="/post/" class="object-title">Post</a>
                            <!--<a href="#" class="object-title">Curriculum</a>-->
                        </div>
                    </div>
                </div>
                <!-- end mobile navbar -->
            </div>
            <!-- right header section -->

        </div>
      </nav>
<style>
  .object-title {
    font-size: 16px;
    font-weight: 800;
    color: --kesseki;
  }
</style>
