---
export interface Props {
  href: string;
  postImage: string;
  postImageAlt: string;
  postTitle: string;
	postDescription: string;
}

const { href, postImage, postImageAlt, postTitle, postDescription } = Astro.props;
---

<div class="grid w-100 px-4 py-8 grid-cols-12">
  <div class="col-span-4">
    <a href={href}>
      <img src={postImage} alt={postImageAlt} class="object-cover h-24 w-96 rounded-xl hover:rounded hover:scale-110 ease-in duration-300" />
    </a>
  </div>
  <div class="col-span-8 ml-3 md:ml-5 lg:ml-10 flex flex-col">
    <div>
      <a class='group transition-all duration-300 ease-in-out text-base font-bold text-[#191919] mb-5' href={href}>
        <span class='bg-left-bottom bg-gradient-to-r from-[#191919] to-[#191919] bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px] transition-all duration-500 ease-out'>
          {postTitle}
        </span>
      </a>
    </div>
    <div>
      <p class="text-sm text-[#262626]">{postDescription}</p>
    </div>
  </div>
</div>
