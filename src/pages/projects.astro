---
import Layout from '../layouts/Layout.astro';
import TitleSection from '../components/TitleSection.astro'
import Project from '../components/Project.astro'
import ProjectCard from '../components/ProjectCard.astro'
---

<Layout title="Progetti - IamLucaM">
	<main>
    <TitleSection title="Progetti" image="https://res.cloudinary.com/dcsr1ibs2/image/upload/c_scale,w_auto/dpr_auto/q_auto/f_auto/v1678547019/IamLucaM/Hero/hero-3.png" imageAlt="Progetti di Luca Mattioli" description="Progetti di Luca Mattioli" />

    <div class="grid w-full px-4 py-8 grid-cols-12 md:gap-16">
      <ProjectCard href="https://m8nke.vercel.app" projectImage="https://res.cloudinary.com/dcsr1ibs2/image/upload/c_scale,w_auto/dpr_auto/q_auto/f_auto/v1678547019/IamLucaM/projects/monke/monke-cover.png" projectImageAlt="Copertina progetto musicale - Monke" projectTitle="Monke - Produzione musicale" projectDescription="Produzione e post produzione di audio, canzoni e beat" />
      <ProjectCard href="/projects/fgadocs" projectImage="https://res.cloudinary.com/dcsr1ibs2/image/upload/c_scale,w_auto/dpr_auto/q_auto/f_auto/v1678547019/IamLucaM/projects/fgadocs/fgadocs-cover.jpg" projectImageAlt="Copertina documentazione sito internet del festival dei giovani dell'Appennino" projectTitle="Docs - FGA" projectDescription="Guida rivolta agli autori del sito web festivalgiovaniappennino.it" />
    </div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 100vw;
	}
</style>
